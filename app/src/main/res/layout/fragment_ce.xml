<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.craftessence.CeFragment">

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/craft_essence"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/linearce"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/view4"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchCe"
            android:layout_width="275dp"
            android:layout_height="41dp"
            android:background="@drawable/search"
            android:gravity="center"
            android:hint="@string/search_ce"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:autofillHints="" />

        <Button
            android:id="@+id/buttonCe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/iconse" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearce"
        android:layout_alignParentStart="true"/>

</RelativeLayout>